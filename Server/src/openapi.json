{
  "openapi": "3.0.0",
  "info": {
    "title": "MarketDirect API",
    "version": "0.1.0",
    "description": "Minimal API spec for local development"
  },
  "paths": {
    "/health": {
      "get": {
        "summary": "Health check",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/futures": {
      "get": {
        "summary": "Get sample futures data",
        "responses": {
          "200": {
            "description": "A list of futures",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Future" }
                }
              }
            }
          }
        }
      }
    },
    "/api/stock": {
      "get": {
        "summary": "Get sample stock data",
        "responses": {
          "200": {
            "description": "A list of stocks",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Stock" }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Future": {
        "type": "object",
        "properties": {
          "symbol": { "type": "string" },
          "name": { "type": "string" },
          "price": { "type": "number", "format": "float" }
        }
      },
      "Stock": {
        "type": "object",
        "properties": {
          "symbol": { "type": "string" },
          "name": { "type": "string" },
          "price": { "type": "number", "format": "float" }
        }
      }
    }
  }
}
