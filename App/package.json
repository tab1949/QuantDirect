{
  "name": "next-test",
  "version": "0.1.0",
  "private": true,
  "main": "dist-electron/main.js",
  "description": "QuantDirect Desktop Application",
  "author": "tabxx",
  "scripts": {
    "dev": "node scripts/dev.mjs",
    "dev:next": "next dev --turbopack --hostname 127.0.0.1 --port 3000",
    "build": "next build --turbopack",
    "build:electron": "node scripts/build-electron.mjs",
    "package": "node scripts/package.mjs",
    "start": "node scripts/start.mjs",
    "start:next": "next start --hostname 127.0.0.1 --port 3210",
    "lint": "eslint"
  },
  "dependencies": {
    "i18next": "^25.5.2",
    "next": "16.0.10",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-i18next": "^16.0.0",
    "styled-components": "^6.1.19"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "electron": "^35.7.5",
    "electron-builder": "^26.4.0",
    "eslint": "^9",
    "eslint-config-next": "^16.0.10",
    "typescript": "^5"
  },
  "overrides": {
    "tar": "^7.5.3"
  },
  "build": {
    "appId": "net.tabxx.quantdirect",
    "productName": "QuantDirect",
    "directories": {
      "output": "release",
      "buildResources": "resource"
    },
    "files": [
      "dist-electron/**/*",
      "out/**/*",
      "resource/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "dist-electron/main.js"
    },
    "asar": true,
    "win": {
      "icon": "QuantDirect.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "QuantDirect-${version}-${os}-${arch}.${ext}",
      "publisherName": "tabxx"
    },
    "linux": {
      "icon": "QuantDirect.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "tar.gz",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "QuantDirect-${version}-${os}-${arch}.${ext}",
      "category": "Finance",
      "maintainer": "tabxx",
      "synopsis": "QuantDirect Desktop Application",
      "desktop": {
        "Name": "QuantDirect",
        "Comment": "QuantDirect Desktop Application",
        "Type": "Application",
        "Categories": "Office;Finance;",
        "Terminal": false
      }
    },
    "nsis": {
      "artifactName": "QuantDirect-${version}-Setup.${ext}"
    },
    "portable": {
      "artifactName": "QuantDirect-${version}-portable.${ext}"
    }
  }
}
